{
  "manifest_version": 3,
  "name": "Search Books on TheStoryGraph",
  "description": "Right click to search your selected text on TheStoryGraph.",
  "version": "1.0",
  "permissions": ["contextMenus"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "assets/icon_16.png",
      "46": "assets/icon_48.png",
      "128": "assets/icon_128.png"
    }
  },
  "icons": {
    "16": "assets/icon_16.png",
    "46": "assets/icon_48.png",
    "128": "assets/icon_128.png"
  }
}
